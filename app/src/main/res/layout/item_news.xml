<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_10dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/news_item_img"
        android:layout_width="@dimen/dim_120dp"
        android:layout_height="@dimen/dim_120dp"
        android:layout_marginTop="@dimen/dim_20dp"
        android:layout_alignParentStart="true"
      />

    <TextView
        android:id="@+id/news_item_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hvjvhbjhjhv"
         android:layout_toEndOf="@+id/news_item_img"
        android:layout_marginTop="@dimen/dim_10dp"
        android:gravity="center"
        android:textSize="@dimen/txt_20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        />
        <TextView
            android:id="@+id/news_item_txt_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_item_txt_title"
            android:layout_toEndOf="@+id/news_item_img"
            android:textSize="@dimen/txt_16sp"
            android:textColor="@android:color/black"
            />
</RelativeLayout>


</androidx.cardview.widget.CardView>